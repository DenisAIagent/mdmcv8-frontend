{
  "name": "mdmc-marketing-dashboard",
  "version": "1.0.0",
  "description": "Dashboard SaaS pour gestion campagnes publicitaires multi-plateformes",
  "author": "MDMC Music Ads",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd apps/api && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "start": "npm run start:api",
    "start:api": "cd apps/api && npm run start",
    "install:all": "npm install && cd apps/api && npm install && cd ../web && npm install",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "test": "npm run test:api && npm run test:web",
    "test:api": "cd apps/api && npm test",
    "test:web": "cd apps/web && npm test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}